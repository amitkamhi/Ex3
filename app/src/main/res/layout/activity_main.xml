<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrian_2.ex3.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:text="@string/num1"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:id="@+id/textView1"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/enterFirst"
                android:layout_marginLeft="110dp"
                android:background="@drawable/border"
                android:textAlignment="center">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:text="+"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAdd"
                android:layout_weight="1"
                android:onClick="pressAdd"/>

            <Button
                android:text="-"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMinus"
                android:layout_weight="1"
                android:onClick="pressMinus"/>

            <Button
                android:text="*"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMulti"
                android:layout_weight="1"
                android:onClick="pressMulti"/>

            <Button
                android:text="/"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDivisin"
                android:layout_weight="1"
                android:onClick="pressDivision"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:text="@string/num2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="0.52"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/enterSecond"
                android:layout_weight="1"
                android:layout_marginLeft="60dp"
                android:background="@drawable/border"
                android:textAlignment="center"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@android:color/black"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:text="="
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAnswer"
                android:layout_marginLeft="20dp"
                android:onClick="result"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:id="@+id/answer"
                android:layout_marginLeft="130dp"
                android:background="@drawable/border"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:freezesText="true"/>

        </LinearLayout>

        <Button
            android:text="@string/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rest"
            android:onClick="reset"
            android:layout_marginTop="50dp"/>

    </LinearLayout>
</RelativeLayout>
